<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todoapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_to_show"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_to_show"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ToDoListDisplayActivity"
            android:label="@string/title_activity_to_do_list_display"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".AddListFormActivity" />
        <activity
            android:name=".MainApp"
            android:label="@string/title_activity_main_app" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
    </application>

</manifest>